<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow backup of app data -->
        <include domain="file" path="."/>
        <exclude domain="file" path="no_backup/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow data transfer when changing devices -->
        <include domain="file" path="."/>
        <exclude domain="file" path="no_backup/"/>
    </device-transfer>
</data-extraction-rules>